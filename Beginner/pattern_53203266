#include <bits/stdc++.h>
//#include <iomanip>
using namespace std;
int main()
{
	int n,p,q;
	cin>>n;
	for(int i=i;i<=n;i++)
	{
		p=n-i;
		q=2*i-1;
	//	setw(p);
	    for (int r=i;r<=p;r++)
	     cout<<" ";
		for (int j=1;j<=q;j++)
		{
		  cout<<j<<" ";
		  //cout<<j;
	    }
		 cout<<"\n";
	}
	return 0;
}
